#include <iostream>
using namespace std;

#define size 5
int front = -1, rear = -1;
int queue[size];

void enqueue(int value);
void dequeue ();
int peek();
void displey();

int main()
{   
    enqueue(5);
    enqueue(10);
    enqueue(15);

    displey();
    dequeue();
    
    displey();

    cout << "peek = " << peek();
   
    return 0;
}

void enqueue(int value){         //===========================
   if (rear != size -1)
      {
         if (front == -1 && rear == -1)
         {
            front++;
            queue[++rear] = value;
         }
         else 
         {
            queue[++rear] = value;
         }
      }
   else 
   {
     cout << "Queue is full " << endl;
   }

}


void dequeue(){                    //============================
    if (front != -1 && rear != -1 && front <=rear)
       {
             front++;
       }
     else 
       {
           cout << "queue is empty" << endl;
       }  
  }

int peek(){                          //===========================
   if (front != -1 && rear != -1 && front <= rear)
      {
         return queue[front];
      }
   else 
      {
         cout << "queue is empty" << endl;
         return -1; 
      }
}

void displey(){                        //===========================
 if (front != -1 && rear != -1 && front <= rear)
    {
        for (int i = front; i<= rear; i++)
         {
           cout << queue[i] << " "; 
         }
        cout << endl;  
    }
 else 
    {
      cout << "queue is empty" << endl;
    }
}




